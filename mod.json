{
	"geode": "4.9.0",
	"gd": {
		"win": "2.2074",
		"mac": "2.2074",
		"android": "2.2074",
		"ios": "2.2074"
	},
	"version": "v0.3.3-alpha",
	"id": "rgdps.level_tags",
	"name": "Level Tags RGDPS",
	"developer": "KampWski",
	"description": "A mod that adds tags to levels.",
	"dependencies": {
		"geode.node-ids": {
			"version": ">=v1.17.0",
			"importance": "required"
		},
		"alphalaneous.happy_textures": {
			"version": ">=v2.0.6",
			"importance": "required"
		}
	},
	"tags": [
		"interface",
		"utility",
		"online"
	],
	"resources": {
		"sprites": [
			"resources/*.png",
			"resources/tags/*.png"
		],
		"spritesheets": {
			"tags": [
				"resources/tags/*.png"
			]
		}
	},
	"links": {
		"source": "https://github.com/KampWskiR/Level-Tags",
		"community": "https://discord.gg/6GXYHf9WTB"
	},
	"settings": {
		"customization": {
            "name": "Customization",
            "type": "title",
            "description": "These are settings that will customize your experience as best as possible."
        },
		"levelInfoShow": {
			"name": "LevelInfoLayer Tags",
			"description": "Enable tags displaying in LevelInfoLayer.",
			"type": "bool",
			"default": false
		},
		"pauseLayerShow": {
			"name": "Pause Screen Tags",
			"description": "Enable tags displaying in PauseLayer.",
			"type": "bool",
			"default": false
		},
		"hideRequest": {
			"name": "Hide Request Button",
			"type": "bool",
			"default": false
		},
		"tags-order": {
			"name": "Tag Order",
			"type": "string",
			"default": "style, theme, meta, gameplay",
			"one-of": ["style, theme, meta, gameplay","meta, gameplay, style, theme","gameplay, meta, style, theme"]
		},
		"hideStyle": {
			"name": "Hide Style Tags",
			"type": "bool",
			"default": false
		},
		"hideTheme": {
			"name": "Hide Theme Tags",
			"type": "bool",
			"default": false
		},
		"hideMeta": {
			"name": "Hide Meta Tags",
			"type": "bool",
			"default": false
		},
		"hideGameplay": {
			"name": "Hide Gameplay Tags",
			"type": "bool",
			"default": false
		},
		"other": {
            "name": "Other",
            "type": "title"
        },
		"serverUrl": {
			"name": "Server Url",
			"type": "string",
			"default": "https://hutchingd-leveltagsserverrgdps.hf.space",
			"filter": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ:/.?&=0123456789",
			"description": "The URL of the server that stores the tags."
		}
	}
}
